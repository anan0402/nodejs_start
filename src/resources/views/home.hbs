<div class="mt-5 container">
  <h2>List of posts</h2>
  <div class="row mt-3">
    {{#each courses}}
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card w-100 h-100">
          <a class="w-100" href="/courses/{{this.slug}}">
            <img src={{this.image}} class="image-fixed" alt="logo_photo" />
          </a>
          <div class="card-body d-flex align-items-start justify-content-between gap-3 flex-column">
            <div>
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
            </div>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>