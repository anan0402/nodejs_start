<div class="mt-4 container d-flex flex-column gap-3">
  <h2>Your posts</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Last update</th>
        <th scope="col" colspan="2">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#if courses.length}}
        {{#each courses}}
          <tr>
            <th scope="row">{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>{{this.updatedAt}}</td>
            <td>
              <div
                class="d-flex align-items-center justify-content-center gap-2"
              >
                <button
                  class="red-text border-0 bg-white"
                  data-bs-toggle="modal"
                  data-bs-target="#deleteModal"
                  data-bs-whatever="{{this._id}}"
                >
                  <i class="fa-solid fa-trash text-danger"></i>
                </button>
                <a href="/courses/{{this._id}}/edit">
                  <i class="fa-solid fa-pen"></i>
                </a>
              </div>
            </td>
          </tr>
        {{/each}}
      {{else}}
        <p>No posts available.</p>
      {{/if}}

    </tbody>
  </table>
</div>

<!-- Modal delete -->
<div
  class="modal fade"
  id="deleteModal"
  tabindex="-1"
  aria-labelledby="deleteModalLabel"
  aria-hidden="true"
>
  <div
    class="modal-dialog modal-height d-flex align-items-center justify-content-center"
  >
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="deleteModalLabel">Delete post</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this post?
      </div>
      <div class="modal-footer">
        <button id="button_delete_post" type="button" class="btn btn-danger">Delete</button>
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Form submit id for deleting -->
<form name="deleteForm" method="POST"></form>

<!-- Action delete -->
<script>
  const deleteModal = document.getElementById('deleteModal'); 
  var id_delete 
  var deleteForm = document.forms['deleteForm']
  if(deleteModal) {
    deleteModal.addEventListener('show.bs.modal', function(event) { 
    const button = event.relatedTarget;
    id_delete = button.getAttribute('data-bs-whatever');
  })}

  var btnDeletePost = document.getElementById('button_delete_post')

  btnDeletePost.onclick = function(){
    deleteForm.action = '/courses/'+ id_delete + '?_method=DELETE'
    deleteForm.submit()
  }

</script>